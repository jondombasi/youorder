<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.websmithing.gpstracker.GpsTrackerActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="17dp"
        android:src="@drawable/ogo_" />

    <Button
        android:id="@+id/refresh"
        style="@style/DefaultButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerInParent="true"
        android:background="#a0ce4e"
        android:drawableLeft="@drawable/ic_stat_refresh"
        android:focusable="true"
        android:padding="12dp"
        android:text="@string/check_network"
        android:textColor="@drawable/colorbutton"
        android:textSize="19sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/txtWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:hint="@string/upload_website"
        android:inputType="textUri"
        android:visibility="gone" />
